<f:UserControlBase x:Class="MyPoll.View.PollView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MyPoll.View"
        xmlns:vm="clr-namespace:MyPoll.ViewModel"
        xmlns:f="clr-namespace:PRBD_Framework;assembly=PRBD_Framework"
        mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:PollViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5 5 5 5">
            <TextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
            <Button Content="Clear" Command="{Binding ClearFilter}"/>
        </StackPanel>
        <ListView FlowDirection="LeftToRight" ItemsSource="{Binding Polls}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>

                        <!-- <WrapPanel Background="Aqua" Height="30" Orientation="Horizontal" -->
                    <!--            Margin="5 5 5 5"> -->
                            <TextBlock Text="{Binding Title}" TextWrapping="Wrap" Width="160"
                                       Margin="5 5 5 5"/>

                            <TextBlock>
                                <Run>Created by </Run>
                                <Run Text="{Binding Creator.FullName}" FontWeight="Bold"/>
                            </TextBlock>

                            <TextBlock>
                                <Run Text="{Binding Participants.Count, Mode=OneWay}"/>
                                <Run> Participants</Run>
                            </TextBlock>

                            <TextBlock>
                            <Run Text="{Binding VoteCount, Mode=OneWay}"/>
                            <Run> votes</Run>
                            </TextBlock>

                        <!-- <TextBlock> -->
                        <!--     <Run FontWeight="Bold" Text="{Binding BestChoiceTitle}"/> -->
                        <!--     <ListView ItemsSource="{Binding BestChoices}"> -->
                        <!--         <ListView.ItemTemplate> -->
                        <!--             <DataTemplate> -->
                        <!--                 <TextBlock Text="{Binding Label}"/> -->
                        <!--             </DataTemplate> -->
                        <!--         </ListView.ItemTemplate> -->
                        <!--     </ListView> -->
                        <!-- </TextBlock> -->
                    <!-- </WrapPanel> -->
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</f:UserControlBase>

