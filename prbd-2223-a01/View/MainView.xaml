<f:WindowBase x:Class="MyPoll.View.MainView"
              x:Name="win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vw="clr-namespace:MyPoll.View"
        xmlns:vm="clr-namespace:MyPoll.ViewModel"
        xmlns:f="clr-namespace:PRBD_Framework;assembly=PRBD_Framework"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="768" Width="1024" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Logout" Command="{Binding LogoutCommand}"/>
        </StackPanel>
        <f:MyTabControl x:Name="TabControl" Margin="10" Grid.Row="1">
            <TabItem x:Name="pollsTab" Header="Polls" Tag="Polls">
                <vw:PollView/>
            </TabItem>
        </f:MyTabControl>
    </StackPanel>
</f:WindowBase>

